<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'Add a Stock | Riki's WatchList'}) %>
    <link rel="stylesheet" href="/styles/stock-form.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <h1>New Stock Form</h1>

    <form method="POST" action="/stock/<%= stock.id %>?_method=PUT">
        <!-- Name input -->
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <br>

        <!-- Ticker input -->
        <label for="ticker">Ticker:</label>
        <input type="text" id="ticker" name="ticker" min="0" required>
        <br>

        <!-- Price input -->
        <label for="price">Price: $</label>
        <input type="number" id="price" name="price" min="0"value="<%= stock.price %>">
        <br>

        <!-- Photo input -->
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" required>
        <br>

        <!-- Description input -->
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
        <br>

        <input type="submit" value="Post Stock">
        
    </form>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
