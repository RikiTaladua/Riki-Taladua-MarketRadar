<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Create an review | MarketRadar'}) %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"     integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <link rel="stylesheet" href="/styles/stock-form.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="hero">
        <h2>User Review</h2>
        <h4><i>You're reviewing this stock <a href="/stock/<%= stock._id %>"><%= stock.name %></a></i></h4>
    </section>

    <form action="/reviews/create/<%= stock._id %>" method="POST">
        <label for="reviewer">Reviewer Name:</label><br>
        <input type="text" id="reviewer" name="reviewer" required><br>

        <label for="stockType">stock Type:</label><br>
        <input type="text" id="stockType" name="stockType" required><br>

        <label for="title">Review  Title:</label><br>
        <input type="Title" id="title" name="title" required><br>

        <label for="content">Review Content:</label><br>
        <input type="cont" id="content" name="content" required><br>

        <label for="rating">Review  Rating:</label><br>
        <input type="number" id="rating" name="rating" min="0" value="0"><br>

        <input type="submit" value="Submit">
    </form>

    <%- include('../partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>

</html>